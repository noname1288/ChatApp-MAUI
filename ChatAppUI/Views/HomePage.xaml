<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ChatAppUI.Views.HomePage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="TitleTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="24" />
                <Setter Property="FontFamily" Value="Metropolis Medium" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="WidthRequest" Value="160" />
                <Setter Property="Margin" Value="36, 48, 0, 0" />
            </Style>

            <Style x:Key="SuggestedContainerStyle" TargetType="Grid">
                <Setter Property="Margin" Value="36, 24, 0, 24" />
            </Style>

            <Style x:Key="SearchContainerStyle" TargetType="Grid">
                <Setter Property="HeightRequest" Value="52"></Setter>
                <Setter Property="WidthRequest" Value="52"></Setter>
                <Setter Property="Margin" Value="0,0, 12 ,0"></Setter>
            </Style>

            <Color x:Key="SearchBackgroundColor">#868ACB</Color>

            <Style x:Key="SearchIconStyle" TargetType="Image">
                <Setter Property="Margin" Value="6"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid
            BackgroundColor="{StaticResource PrimaryColor}"
            RowDefinitions="Auto, *">
            <!-- Header -->
            <Grid
                BackgroundColor="Yellow"
                Grid.Row="0"
                RowDefinitions="Auto, *">
                <Label
                    Grid.Row="0"
                    BackgroundColor="Green"
                    Text="Chat with your friends"
                    Style="{StaticResource TitleTextStyle}" />
                <Grid
                    Grid.Row="1"
                    BackgroundColor="Red"
                    ColumnDefinitions="Auto, *"
                    Style="{StaticResource SuggestedContainerStyle}">
                    <!-- Search Button -->
                    <Grid
                        Grid.Column="0"
                        Style="{StaticResource SearchContainerStyle}">
                        <Ellipse
                            Fill="{StaticResource SearchBackgroundColor}" />
                        <Image
                            Source="search.png"
                            Style="{StaticResource SearchIconStyle}" />
                    </Grid>
                    <!-- Suggested Contact -->
                    <ScrollView
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <StackLayout
                            Orientation="Horizontal"
                            BackgroundColor="Aqua">

                        </StackLayout>
                    </ScrollView>
                </Grid>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>